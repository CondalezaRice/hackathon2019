<UserControl x:Class="MKUltra.UI.Controls.example_pickChallenge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKUltra"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="260">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MKUltra;component/UI/MaterialDesignIcons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MKUltra;component/UI/IconResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <StackPanel>

            <Border Margin="10" Padding="10, 10, 10, 10">
                <StackPanel>
                    <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="18" Margin="0,0,0,10">DIFFICULTY SELECT</TextBlock>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Width="200">
                        <ComboBoxItem Content="Easy (0-74 words)" HorizontalAlignment="Left" Width="200"/>
                        <ComboBoxItem Content="Medium (75-149 words)" HorizontalAlignment="Left" Width="200"/>
                        <ComboBoxItem Content="Hard (150+ words)" HorizontalAlignment="Left" Width="200"/>
                    </ComboBox>
                </StackPanel>
            </Border>

        </StackPanel>


    </Grid>
    
</UserControl>
