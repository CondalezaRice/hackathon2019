<UserControl x:Class="MKUltra.Views.DigitalTimer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MKUltra"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <!--<TextBlock Text="Time elapsed: "  Foreground="White" Background="Black"/>-->
        <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="200" Background="Black" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Path=TotalSecondsPlayed, Converter={StaticResource SecondsToTimeStringConverter}}" Foreground="LimeGreen" Background="Black" FontFamily="Consolas"
                   FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
